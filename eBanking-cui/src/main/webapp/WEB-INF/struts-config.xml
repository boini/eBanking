<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
    <action-mappings>
        <action path="/login" type="com.ebanking.cui.presentation.action.LoginForward">
            <forward name="success" path="/jsp/login.jsp"/>
        </action>
        <action path="/landing" type="com.ebanking.cui.presentation.action.LoginForward">
            <forward name="success" path="/nbrbCurrency.do"/>
        </action>
        <action path="/nbrbCurrency" type="com.ebanking.cui.presentation.action.currency.NBRBCurrencyAction">
            <forward name="success" path="main.tiles"/>
        </action>
    </action-mappings>

    <controller processorClass="org.apache.struts.tiles.TilesRequestProcessor"/>
    <plug-in className="org.apache.struts.tiles.TilesPlugin">
        <set-property value="/WEB-INF/tiles-defs.xml" property="definitions-config"/>
    </plug-in>

</struts-config>