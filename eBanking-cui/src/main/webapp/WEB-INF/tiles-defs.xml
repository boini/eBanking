<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 1.1//EN"
        "http://struts.apache.org/dtds/tiles-config_1_1.dtd">

<tiles-definitions>
    <definition name="baseLayout" path="/jsp/layout/baseLayout.jsp">
        <put name="title" value=""/>
        <put name="header" value="/jsp/layout/header.jsp"/>
        <put name="menu" value="/jsp/layout/menu.jsp"/>
        <put name="body" value="/jsp/layout/body.jsp"/>
        <put name="footer" value="/jsp/layout/footer.jsp"/>
        <putList name="styles"/>
        <putList name="scripts">
            <add value="/js/jquery-1.8.2.js"/>
            <add value="/js/bootstrap.js"/>
        </putList>
    </definition>
    
    <definition name="landing.tiles" extends="baseLayout">
        <put name="title" value="eBanking"/>
        <put name="body" value="/jsp/landing.jsp"/>
        <putList name="styles">
            <add value="/css/normalize.css"/>
            <add value="/css/bootstrap.css"/>
            <add value="/css/common.css"/>
        </putList>
    </definition>

</tiles-definitions>
